{
  "compilerOptions": {
    "lib": ["esnext"],
    "target": "es5",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "baseUrl": ".",
    "resolveJsonModule": true,
    "outDir": ".build"
  },
  "include": ["@types/**/*.d.ts"],
  "files": [
    "utils/mdx-docs-config.ts",
    "utils/mdx-config.ts",
    "utils/mdx-paths.ts",
    "utils/paths.ts",
    "utils/config.ts"
  ],
  "exclude": ["node_modules"]
}
